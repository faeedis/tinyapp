<table>
  <thead>
    <tr>
      <th>Short URL</th>
      <th>Long URL</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% if (Array.isArray(urls)) { %>
      <% urls.forEach(url => { %>
        <tr>
          <td><a href="/urls/<%= url.shortURL %>"><%= url.shortURL %></a></td>
          <td><%= url.longURL %></td>
          <td><a href="/urls/<%= url.shortURL %>">Edit</a></td>
          <td>
            <form method="POST" action="/urls/<%= url.shortURL %>/delete">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
    <% } %>
  </tbody>
</table>
